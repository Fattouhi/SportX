<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.sportxnews.controller.LiveScoresController">

    <!-- Top: Header -->
    <top>
        <VBox spacing="10" style="-fx-padding: 10;">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Live Scores" />
            <Button text="Refresh" onAction="#updateLiveScores" style="-fx-font-size: 14px;" />
            <Button text="Back to Main" onAction="#goToMainScreen" style="-fx-font-size: 14px;" />
        </VBox>
    </top>

    <!-- Center: ScrollPane to display live scores -->
    <center>
        <ScrollPane fitToWidth="true">
            <VBox spacing="20" style="-fx-padding: 20;">
                <VBox fx:id="liveScoresContainer" spacing="10">
                    <!-- Live scores will be added dynamically here -->
                </VBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>