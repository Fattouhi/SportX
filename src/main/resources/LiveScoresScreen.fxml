<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.sportxnews.controller.LiveScoresController">

    <!-- Top: Header -->
    <top>
        <VBox spacing="10" style="-fx-padding: 10;">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Live Scores" />
            <Button text="Back to Main" onAction="#goToMainScreen" style="-fx-font-size: 14px;" />
        </VBox>
    </top>

    <!-- Left: Search and Category List -->
    <left>
        <VBox spacing="10" style="-fx-padding: 10; -fx-background-color: #f4f4f4;">
            <!-- Barre de recherche -->
            <TextField fx:id="searchField" promptText="Rechercher une catégorie..." />
            <!-- Liste des catégories -->
            <ListView fx:id="categoryListView" />
        </VBox>
    </left>

    <!-- Center: ScrollPane to display live scores -->
    <center>
        <ScrollPane fitToWidth="true">
            <VBox fx:id="liveScoresContainer" spacing="20" style="-fx-padding: 20;">
                <!-- Les cartes de scores en direct seront ajoutées dynamiquement ici -->
            </VBox>
        </ScrollPane>
    </center>

</BorderPane>