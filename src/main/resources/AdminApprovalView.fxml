<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.fxml.FXML?>
<?import javafx.fxml.FXMLLoader?>

<?import java.net.URL?>
<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sportx.controller.abir.AdminApprovalController">
    <stylesheets>
        <URL value="@/AdminApprovalView.css"/>
    </stylesheets>
    <!-- Add Navbar to the Top Section -->
    <top>
        <VBox style="-fx-padding: 0 0 20 0;"> <!-- Add padding directly in the FXML -->
            <fx:include source="navbar.fxml" fx:id="navbar"/>
        </VBox>
    </top>

    <!-- Existing Content in the Center Section -->
    <center>
        <VBox>
            <Label text="Pending Join Requests" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <ListView fx:id="requestListView"/>
        </VBox>
    </center>
</BorderPane>