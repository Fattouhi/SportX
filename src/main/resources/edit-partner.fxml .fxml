    <Label text="Modifier un partenaire" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <TextField fx:id="nameField" promptText="Nom" />
    <TextField fx:id="descriptionField" promptText="Description" />
    <TextField fx:id="logoUrlField" promptText="URL du logo" />
    <Button text="Modifier" onAction="#updatePartner" />
</VBox>