<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sportx.ShoppingCartController">
    <children>
        <Label text="Shopping Cart" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
        <ListView fx:id="cartItemsList" prefHeight="400.0" prefWidth="600.0" />
        <Label fx:id="totalPriceLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        <Button fx:id="checkoutButton" text="CHECKOUT" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16px;" onAction="#checkout" />
    </children>
</VBox>